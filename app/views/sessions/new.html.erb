<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="col-sm-5 col-sm-offset-3">
    <%= form_tag(sessions_path) do %>

      <%= label_tag :email %>
      <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter email"  %>

      <%= label_tag :password %>
      <%= password_field_tag :password , nil, class: "form-control", placeholder: "Enter password" %>

      <%= submit_tag "Sign in", class: "btn btn-primary btn-lg " %>  

    <% end %> 
  </div>
</div>

